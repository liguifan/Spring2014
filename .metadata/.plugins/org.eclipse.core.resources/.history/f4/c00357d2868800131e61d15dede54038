	public static String longest_palindrome(String s,int index){
		int i=index;
		int j=index;
		
		while(i>=0 && j<=s.length()-1){
			if(s.charAt(i)!=s.charAt(j)){
				break;
			}
			i--;
			j++;
		}
		
		return s.substring(beginIndex)
		
		
	}
	
	public static boolean palindrome(String s){
		int i=0;
		int j=s.length()-1;
		while(i<=j){
			if(s.charAt(i)!=s.charAt(j)){
				return false;
				
			}
		}
		return true;
	}

}
