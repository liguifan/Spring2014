	public static int parseInt( final String s )
	{
	    int num  = 0;
	    final int len  = s.length( );
	    int i = 1;
	    while ( i < len )
	        num = num*10 + '0' - s.charAt( i++ );
	    return num;
	} 
	
	public static double parseDouble(String num) {
		String[] arr=num.split("e");
		double sum = 0;
		int sign = 1;
		String left="";
		double first=0;
		if(num.charAt(0)=='-'){
			first=num.charAt(1)-48;
			System.out.println("first "+first);
			left=num.substring(1,arr[0].length());
			sign=-1;
		}else{
			first=num.charAt(0)-48;
			System.out.println("first "+first);
			left=arr[0];
		}
		
		
		String after_point=left.substring(3,left.length());
		System.out.println("after "after_point);
		double decimal=parseInt(after_point)/left.length();
		sum=first+decimal;
		
		return  (double) sum*sign;
		
    
	}

}
