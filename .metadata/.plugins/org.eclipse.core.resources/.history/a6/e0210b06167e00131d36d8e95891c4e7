package recursion;

public class combinations {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
			char a='b';
			String c=Character.toString(a);
			System.out.println(c);
	}
	
	
	
	public static Strings combination(String str,int k,int index){
		
		if(k==1){
			return Character.toString(str.charAt(index));
		}
		String result="";
		for(int i=index; i<=str.length()-1;i++){
			result=Character.toString(str.charAt(index))+combination(str,k-1,i+1);
		}
		
		return result;
	}
}
