package others;

import java.util.ArrayList;
import java.util.HashSet;

public class parlindrome_partitioning {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		String str="aaa";
		ArrayList<ArrayList<String>> set=partition(str);
		for(ArrayList<String> x:set){
			System.out.println(x);
		}
		

	}
	
	public static ArrayList<ArrayList<String>> partition(String str){
		ArrayList<ArrayList<String>> set=new ArrayList<ArrayList<String>>();
		int len=str.length();
		HashSet<String> hashset = new HashSet<String>();
		for(int i=0;i<=len-1;i++){
			int left=i;
			int right=i+1;
			ArrayList<String> path=new ArrayList<String>();
			while(left>=0 && right<=len-1){
				if(str.charAt(left)==str.charAt(right)){
					System.out.println("test");
					String s=str.substring(left,right+1);
					if(hashset.add(s)){
						path.add(s);
					}
					System.out.println("path is "+path);
					left--;
					right++;
				}else{
					
					break;
				}
			}
			set.add(path);
			System.out.println("mmmmmm");
			
		}
		
		return set;
}
}
