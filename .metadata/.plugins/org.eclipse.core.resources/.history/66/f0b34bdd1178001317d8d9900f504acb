package array_and_strings;

public class question14 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String input="Mr John Smith      ";
		// String to char[] 
		char[] input2=input.toCharArray();
		System.out.println(add20(input2));
		
	}
	
	public static char[] add20(char[] input,int n){
		char[] result=new char[n];
		for(int i,j=0;i<input.length-2;i++){
			
			
			if(input[i]==' '){
				for(int j=i+1;j<input.length-2;j++){
					result[j+2]=input[j];
					System.out.println("cut"+j);
				}
				result[j]='%';
				j++;
				result[j]='2';
				j++;
				result[i+2]='0';
				
			}
			result[j]=input[i];
			
		}
		return input;
	}

}
