package DP;

public class zigzag {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	
	public static int zigzag_find(int a[]){
		int len=0;
		int[] d=new int[a.length];
		int flag=0;
		for(int i=0;i<a.length;i++){
			d[i]=1;
			for(int j=0;j<i;j++){
				if((a[i-1]-a[i])*flag<0 && d[i]<d[j]+1)
					d[i]=d[j]+1;
				
				if(a[i-1]-a[i]>0)	flag=1;
				else	flag=-1;
				
				if(d[i]>len) len=d[i];
			}
		}
		return len;
		
		
		
		
		
	}
}
