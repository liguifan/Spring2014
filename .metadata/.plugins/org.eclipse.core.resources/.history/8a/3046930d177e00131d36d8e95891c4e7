package recursion;

import java.util.ArrayList;

public class combinations {
	static ArrayList<String> set=new ArrayList<String>();
	public static void main(String[] args) {
		// TODO Auto-generated method stub
			String a="james";
			combination(a, 2, 0);
			
			System.out.println(result);
	}
	
	
	
	public static void combination(String str,int k,int index){
		
		if(k==1){
			System.out.println(index+" "+k+Character.toString(str.charAt(index)));
			return Character.toString(str.charAt(index));
		}
		String result="";
		for(int i=index; i<=str.length()-2;i++){
			result=Character.toString(str.charAt(index))+combination(str,k-1,i+1);
			set.add(result);
		}
		
		return result;
	}
}
