package DP;

public class gas_station {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	public int canCompleteCircuit(int[] gas, int[] cost) {
        int j;
        int begin=0;
        if(gas.length==1){
            if(gas[0]-cost[0]>=0)
                return 0;
            else
                return -1;
        }
                
        for(int i=0;i<gas.length;i++){
            int gas_left=0;
            begin=i;
            flag=1;
            for(j=i;(j+1)%gas.length!=i;j++){
                j=j%gas.length;
              
                gas_left+=gas[j];
                gas_left-=cost[j];
                if(gas_left<0)
                    flag=-1;
            }
            if(flag==1)
                return begin;
        }
        return -1;
    }
}
