	public static int read_class(String line){
		int y=(int)line.charAt(0)-48;
		return y;
	}
	
	
	public static String cut_off(String line){
		String new_line=line.substring(12,line.length()-10);
		return new_line;
	}
	
	public static String[] split_string(String line){
		String[] arr=line.split(" ");
		return arr;
	}
	
