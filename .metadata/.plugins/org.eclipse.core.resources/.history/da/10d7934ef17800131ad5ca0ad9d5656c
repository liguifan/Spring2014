package tree_max_path;

import datastructure.TreeNode;



public class tree_max_path {

		public static void main(String args[]){
			
			TreeNode root=new TreeNode(1);
			root.left=new TreeNode(2);
			root.right=new TreeNode(3);
			int max=root.val;
			int result=max_path(root,max);
			System.out.println(max);
		}
		
		
		static int sum=0;
		public static int max_path(TreeNode root,int max){
			if(root==null)
	            return 0;
	        
	        
	        int left=max_path(root.left,max);
	        int right=max_path(root.right,max);
	        System.out.println(left);
	        int m=root.val;
	        if(left>=0)
	            m=m+left;
	        if(right>=0)
	            m=m+right;
	        
	        if(m>max)
	            max=m;
	        
	        return Math.max(left,right)>0?root.val+Math.max(left,right):root.val;
		}
}
